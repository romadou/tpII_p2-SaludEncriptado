<main class="patients-index">
  <div class="row">
    <div class="col-md-8">
      <h1>Listado de Pacientes</h1>
    </div>

    <div class="col-md-4 text-right">
      <%= link_to "Añadir", new_patient_path, class: "btn btn-outline-primary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <% if @patients.any? %>
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nombre</th>
              <th>Email</th>
              <th>Teléfono</th>
              <th>Descripción</th>
              <th>Creado el día</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @patients.each do |patient| %>
              <tr>
                <td><%= patient.id %></td>
                <td><%= patient.name %></td>
                <td><%= patient.email %></td>
                <td><%= patient.phone %></td>
                <td><%= patient.description %></td>
                <td><%= l patient.created_at, format: :short %></td>
                <td><%= link_to "Ver", patient %> | <%= link_to "Editar", edit_patient_path(patient) %> | <%= link_to "Eliminar", patient, method: :delete, data: { confirm: "¿Estás seguro que deseas eliminar este paciente?" } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="alert alert-info">
          No hay pacientes para mostrar
        </div>
      <% end %>
    </div>
  </div>
</main>