<main class="sensors-index">
  <div class="row">
    <div class="col-md-8">
      <h2>Sensores</h2>
    </div>
    <div class="col-md-4 text-right">
      <%= link_to "Añadir", new_sensor_path, class: "btn btn-outline-primary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <% if @sensors.any? %>
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nombre</th>
              <th>Lee</th>
              <th>Descripción</th>
              <th>Lecturas tomadas</th>
              <th>Creado el día</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @sensors.each do |sensor| %>
              <tr>
                <td><%= sensor.id %></td>
                <td><%= sensor.name %></td>
                <td><%= sensor.reads %></td>
                <td><%= sensor.description %></td>
                <td><%= sensor.measures.count %></td>
                <td><%= sensor.created_at.to_s :short %></td>
                <td><%= link_to "Editar", edit_sensor_path(sensor) %> | <%= link_to "Eliminar", sensor, method: :delete, data: { confirm: "¿Estás seguro que deseas eliminar el sensor #{sensor.name} con ID #{sensor.id}?" } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="alert alert-info">
          No hay sensores para mostrar.
        </div>
      <% end %>
    </div>
  </div>

</main>